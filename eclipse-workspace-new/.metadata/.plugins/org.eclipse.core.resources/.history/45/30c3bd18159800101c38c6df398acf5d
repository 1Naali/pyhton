package com.graphics;

import com.main.GameMain;

public class Camera {

	private int x, y;
	public boolean isCaptX() {
		return captX;
	}

	public void setCaptX(boolean captX) {
		this.captX = captX;
	}

	public boolean isCaptY() {
		return captY;
	}

	public void setCaptY(boolean captY) {
		this.captY = captY;
	}

	private boolean captX,captY;

	public Camera() {
		x = 0;
		y = 0;
	}

	public void tick() {
		
		if(
			(GameMain.p.getX()/GameMain.SCALE >= 0 && GameMain.p.getX()/GameMain.SCALE  <= (GameMain.WIDTH-16)/(GameMain.SCALE))
		  )
			captX = true;
		else
			captX = false;
		
		if(
			(GameMain.p.getX()/GameMain.SCALE > 0 && GameMain.p.getX()/GameMain.SCALE  < (GameMain.WIDTH-16)/(GameMain.SCALE))	
				
		  )
				captY = true;
			else
				captY = false;
	}

	public int getX() {
		return x;
	}

	public void setX(int x) {
		this.x = x;
	}

	public int getY() {
		return y;
	}

	public void setY(int y) {
		this.y = y;
	}

}
