package com.player;

import java.awt.Graphics;
import java.awt.image.BufferedImage;

import com.main.GameMain;

public class Player {

	private boolean right, up, left, down;
	private double speed = 3;
	private int frames = 0, maxFrames = 5, index = 0, maxIndex = 3;
	private boolean moved = false;
	private BufferedImage[] plauerSpriteRight;
	private BufferedImage[] playerSpriteLeft;
	private int depth = 1;
	private int x, y;
	public final int PLAYER_WIDTH = 16;
	public final int PLAYER_HEIGHT = 52;
	private int aniIndex;
	private BufferedImage playerSprite;

	public Player(int x, int y, BufferedImage sprite) {
		this.x = x;
		this.y = y;
		this.playerSprite = sprite;
	}

	public void tick() {
		aniIndex++;
		if (aniIndex >= 4)
			aniIndex = 0;
	
	}

	public double getSpeed() {
		return speed;
	}

	public void setSpeed(double speed) {
		this.speed = speed;
	}

	public int getX() {
		return x;
	}

	public void setX(int x) {
		this.x = x;
	}

	public int getY() {
		return y;
	}

	public void setY(int y) {
		this.y = y;
	}

	public void render(Graphics g) {

		g.drawImage(playerSprite, x, y, PLAYER_WIDTH, PLAYER_HEIGHT, null);

	}

}
