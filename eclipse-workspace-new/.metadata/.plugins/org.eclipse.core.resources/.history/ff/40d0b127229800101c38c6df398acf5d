package com.main;

import java.awt.Canvas;
import java.awt.Color;
import java.awt.Graphics;
import java.awt.image.BufferStrategy;

public class Render {

    private Canvas canvas;

    public Render(Canvas canvas) {
        this.canvas = canvas;
    }
	
	public void render() {
		BufferStrategy bs = canvas.getBufferStrategy();
		if(bs == null){
			canvas.createBufferStrategy(3);
			return;
		}
		
		/***/
		
		//Renderizando Objetos
		
		Graphics g = GameMain.image.getGraphics();
		
		g.setColor(Color.black);
		g.fillRect(0, 0, GameMain.WIDTH, GameMain.HEIGHT);
			
		GameMain.map.render(g);
		GameMain.p.render(g);
		g.setColor(new Color(255,0,0,50));
		//g.fillRect(0, 0, (GameMain.WIDTH-16)/(GameMain.SCALE), GameMain.HEIGHT);
		//g.fillRect(GameMain.WIDTH-((GameMain.WIDTH-16)/(GameMain.SCALE)), 0, GameMain.WIDTH, GameMain.HEIGHT);
		//g.fillRect(0, 0, GameMain.WIDTH, (GameMain.HEIGHT-16)/(GameMain.SCALE));
		//g.fillRect(0, GameMain.HEIGHT-(GameMain.HEIGHT-16)/(GameMain.SCALE), GameMain.WIDTH, GameMain.HEIGHT);
		
		/***/
		
		g.dispose();
		g = bs.getDrawGraphics();
		g.drawImage(GameMain.image, 0 - GameMain.cam.getX()*GameMain.SCALE, 0 - GameMain.cam.getY()*GameMain.SCALE, canvas.getWidth(), canvas.getHeight(), null);
		
		
		
		bs.show();
	}
}
